<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminMainActivity">

    <LinearLayout
        android:id="@+id/charityprofilelayout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="50dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:outlineAmbientShadowColor="@color/black"
        >

        <Button
            android:id="@+id/charitybookingstbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BOOKINGS"
            android:textSize="22sp"
            android:padding="10dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            />

        <Button
            android:id="@+id/charityadbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Advertisement"
            android:textSize="22sp"
            android:padding="10dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:layout_alignBottom="@+id/charitybookingstbtn"
            android:layout_gravity="center_horizontal"
            />

        <Button
            android:id="@+id/charityprofilebtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="22sp"
            android:padding="10dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:layout_alignBottom="@+id/charityadbtn"
            android:layout_gravity="center_horizontal"
            />

        <Button
            android:id="@+id/charitylogoutbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textSize="22sp"
            android:padding="10dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:layout_alignBottom="@+id/charityprofilebtn"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>

</ScrollView>